{% extends 'base.html.twig' %}

{% block body %}

    <h1>Liste des categories</h1><br>

    <p><a href="{{ path('category_new') }}"><button class="btn btn-info">Créer une catégorie</button></a></p>

    <table class="table">
        <thead class="thead-dark">
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for category in categories %}
            <tr>
                <td><a href="{{ path('category_show', { 'id': category.id }) }}">{{ category.id }}</a></td>
                <td>{{ category.name }}</td>
                <td>
                    <ul class="list-group">
                        <li class="list-group-item">
                            <a href="{{ path('category_show', { 'id': category.id }) }}">show</a>
                        </li>
                        <li class="list-group-item">
                            <a href="{{ path('category_edit', { 'id': category.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
